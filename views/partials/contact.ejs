<section id="contact" class="contact"><h2>與我聯繫</h2></section>
    
    <div class="contact-container">
        <form class="contact-form" action="/contact" method="POST">
            <div class="form-group">
                <label for="name">姓名</label>
                <input type="text" id="name" name="name" placeholder="姓名" required>
            </div>
            <div class="form-group">
                <label for="email">信箱</label>
                <input type="email" id="email" name="email" placeholder="信箱" required>
            </div>
            <div class="form-group">
                <label for="message">你的需求</label>
                <textarea id="message" name="message" placeholder="請描述你的需求" required></textarea>
            </div>
            <button type="submit" class="submit-button">Submit</button>
        </form>
        <div class="contact-image">
            <img src="/images/contact.jpg" alt="Contact">
        </div>
    </div>
</section>